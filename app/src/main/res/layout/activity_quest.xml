<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="tinycastle.hearyehearye.castleforum.Quest">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        >Quest Toolbar</include>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/qName"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:maxLines="1"
        android:hint="quest name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/qDesc"
        android:layout_below="@+id/qName"
        android:layout_alignParentStart="true"
        android:hint="description of the quest" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/giver"
        android:layout_marginTop="69dp"
        android:maxLines="1"
        android:layout_below="@+id/qDesc"
        android:layout_alignParentStart="true"
        android:hint="quest giver name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/giverDesc"
        android:layout_below="@+id/giver"
        android:layout_alignParentStart="true"
        android:hint="description of the quest giver" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/questImage"
        android:layout_below="@+id/giverDesc"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp"
        android:contentDescription="@string/qImage" />


</RelativeLayout>
