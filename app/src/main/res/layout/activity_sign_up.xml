<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SignUp"
    android:background = "#ffffff">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Submit"
        android:id="@+id/submit"
        android:background="@drawable/roundedGradient"
        android:clickable="true"
        android:textColor="#ffffffff"
        android:textSize="35dp"
        android:padding="5dp"
        android:enabled="true"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:visibility="visible"
        android:stateListAnimator="@null"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Banner"
        android:id="@+id/banner"
        android:padding="5dp"
        android:textColor="#ff177e88"
        android:textSize="50dp"
        android:layout_marginTop="61dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/name"
        android:height="30dp"
        android:width="200dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:hint="Name"
        android:background="@drawable/borderlayers"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/banner"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:textColorHint="#C2C2C4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/email"
        android:height="30dp"
        android:width="200dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:hint="E-mail"
        android:background="@drawable/borderlayers"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:textColorHint="#C2C2C4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/error"
        android:layout_below="@+id/submit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:width="250dp"
        android:phoneNumber="false" />



</RelativeLayout>
